<Application x:Class="ShapeEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShapeEditor"
             xmlns:viewModels="clr-namespace:ShapeEditor.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="ShapeTypeValues">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="viewModels:ShapeType"/> <!-- Укажите правильный namespace, если Enum в другом месте -->
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <!-- ... остальные ресурсы ... -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
